;
; BIND data file for local loopback interface
;
$TTL    604800
@       IN      SOA     {{ global_dns_domain }}. admin.{{ global_dns_domain }}. (
                              3         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
; name servers - NS records
        IN      NS      {{ ansible_default_ipv4.address }}.

; name servers - A records
{{ ansible_hostname }}.{{ global_dns_domain }}.        IN      A       {{ ansible_default_ipv4.address }}


; 192.168.1.0/24 - A records
gateway.{{ global_dns_domain }}.           IN      A       {{ global_default_gateway }}
pve.{{ global_dns_domain }}.               IN      A       192.168.1.50
pve-M910q-01.{{ global_dns_domain }}.      IN      A       192.168.1.40
zabbix.{{ global_dns_domain }}.            IN      A       192.168.1.51
docker.{{ global_dns_domain }}.            IN      A       192.168.1.52
