acl "trusted" {
    192.168.1.1;     # gateway
    192.168.1.53;    # nameserver
    192.168.1.40;    # pve-M910q
    192.168.1.50;    # pve
    192.168.1.51;    # zabbix
    192.168.1.52;    # docker
};

options {
        directory "/var/cache/bind";

        recursion yes;                 # enables recursive queries
        allow-recursion { trusted; };  # allows recursive queries from "trusted" clients
        listen-on { 192.168.1.53; };   # ns1 private IP address - listen on private network only
        allow-transfer { none; };      # disable zone transfers by default

        forwarders {
                192.168.1.1;
                1.1.1.1;
        };

        dnssec-validation auto;

        listen-on-v6 { any; };
};